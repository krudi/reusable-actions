{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "reusable-actions",
    "version": "0.1.0",
    "private": false,
    "description": "Composite actions for common Node.js CI steps. Keep workflows lean by reusing these blocks instead of duplicating setup logic across repos.",
    "keywords": [
        "github-actions",
        "composite-actions",
        "automation",
        "ci",
        "nodejs",
        "typescript",
        "javascript"
    ],
    "homepage": "https://github.com/krudi/reusable-actions#readme",
    "bugs": {
        "url": "https://github.com/krudi/reusable-actions/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/krudi/reusable-actions.git"
    },
    "license": "MIT",
    "author": {
        "name": "krudi",
        "email": "patryk.kudlik@gmail.com",
        "url": "https://github.com/krudi"
    },
    "type": "module",
    "scripts": {
        "clean": "rm -rf .cache node_modules dist",
        "lint:prettier": "prettier --check . --cache --cache-strategy metadata --cache-location .cache/.prettiercache",
        "lint:prettier:fix": "prettier --write . --cache --cache-strategy metadata --cache-location .cache/.prettiercache"
    },
    "devDependencies": {
        "@krudi/prettier-config": "^0.1.8"
    },
    "packageManager": "npm@11.6.4",
    "engines": {
        "node": ">= 22.18.0",
        "npm": ">= 11.6.4"
    }
}
